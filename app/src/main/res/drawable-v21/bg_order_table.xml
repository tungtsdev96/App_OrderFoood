<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorRipple">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/size_5"/>
            <solid android:color="@color/colororange"/>
            <stroke android:width="1dp" android:color="@color/colororange"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/size_5"/>
            <solid android:color="@color/colororange"/>
            <stroke android:width="1dp" android:color="@color/colororange"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/size_5"/>
            <solid android:color="@color/colordarkorange"></solid>
            <stroke android:width="1dp" android:color="@color/colordarkorange" />
        </shape>
    </item>
</ripple>