<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_food"
        android:scaleType="centerInside"
        android:layout_width="@dimen/size_90"
        android:layout_height="@dimen/size_90" />

    <RelativeLayout
        android:layout_toLeftOf="@+id/btn_remove_food"
        android:padding="@dimen/padding_10"
        android:layout_toRightOf="@+id/img_food"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_food"
            android:text="Cơm gà Hội An "
            android:textColor="@color/colorblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/tv_new_price_food"
            android:text="150.000 đ"
            android:textColor="@color/colorred"
            android:layout_below="@id/tv_name_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_note"
            android:textColor="@drawable/note_text_color"
            android:text="@string/note"
            android:layout_below="@+id/tv_new_price_food"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:inputType="number"
        android:layout_toLeftOf="@+id/btn_add_food_to_cart"
        android:id="@+id/tv_number_of_food_order"
        android:textColor="@color/colorblack"
        android:textSize="18sp"
        android:gravity="center"
        android:text="1"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_centerVertical="true"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_toLeftOf="@+id/tv_number_of_food_order"
        android:id="@+id/btn_remove_food"
        android:src="@drawable/ic_remove_food"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35" />

    <ImageView
        android:id="@+id/btn_add_food_to_cart"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/ic_add_food"
        android:layout_marginRight="@dimen/padding_5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35" />

</RelativeLayout>