<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlt_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:paddingBottom="@dimen/size_5"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/size_10"
        android:paddingTop="@dimen/size_5">

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/img_more"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên nhà hàng"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhà hàng" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_5"
            android:src="@drawable/ic_more" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_history"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlt_res"
        android:background="@drawable/bg_normal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:paddingTop="@dimen/size_8">

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng"
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:textSize="15sp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_toRightOf="@+id/tv1"
            android:text="Đặt bàn"
            android:textColor="@color/colorblack" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:id="@+id/tv3"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt  "
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/tv2"
            android:id="@+id/tv_order_time"
            android:layout_below="@+id/tv2"
            android:layout_toRightOf="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/11/2017 23:51:00"
            android:textColor="@color/colorblack" />


        <TextView
            android:padding="@dimen/size_2"
            android:id="@+id/tv4"
            android:layout_below="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Ngày đến "
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/tv2"
            android:layout_below="@+id/tv_order_time"
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/11/2017 23:51:00"
            android:textColor="@color/colorblack" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:id="@+id/tv5"
            android:layout_below="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số người"
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:id="@+id/tv_number_of_people"
            android:textColor="@color/colorblack"
            android:text="10 người"
            android:layout_alignLeft="@+id/tv_time_start"
            android:layout_below="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"
            android:id="@+id/ic"
            android:src="@mipmap/icon_app"
            android:layout_below="@+id/tv5"
            android:padding="@dimen/size_2"
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:layout_marginTop="@dimen/size_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number_of_people"
            android:layout_toEndOf="@+id/ic"
            android:layout_toRightOf="@+id/ic"
            android:text="Trạng thái"
            android:textColor="@color/colorblack"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_vertical"
            android:padding="@dimen/size_2"
            android:id="@+id/tv_status"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_alignBottom="@+id/ic"
            android:layout_toRightOf="@id/ic"
            android:text="Đã bị hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="@dimen/size_5"
            android:id="@+id/img_status"
            android:layout_alignBottom="@+id/tv_status"
            android:layout_alignTop="@+id/tv_status"
            android:layout_toRightOf="@+id/tv_status"
            android:src="@drawable/ic_delyvery"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_10" />

    </RelativeLayout>

</RelativeLayout>