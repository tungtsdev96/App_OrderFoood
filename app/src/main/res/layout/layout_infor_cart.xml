<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlt_infor_cart"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:layout_gravity="bottom"
    android:background="@color/colorblacktran"
    android:paddingLeft="@dimen/padding_10"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:id="@+id/img_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cart_while" />

    <TextView
        android:id="@+id/tv_infor_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_toLeftOf="@+id/btn_delete_order"
        android:layout_toRightOf="@id/img_cart"
        android:text="0 phần - 0 đồng"
        android:textColor="@color/colordarkblue" />


    <TextView
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:gravity="center"
        android:id="@+id/btn_continue_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/colordarkblue"
        android:text="@string/continues"
        android:textColor="@color/colorwhite"
        android:visibility="visible" />

    <TextView
        android:padding="@dimen/padding_10"
        android:id="@+id/btn_delete_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_toLeftOf="@+id/btn_continue_order"
        android:text="@string/delete_order"
        android:textColor="@color/colorwhite"
        android:visibility="visible" />

</RelativeLayout>